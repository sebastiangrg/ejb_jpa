<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <servlet>
        <servlet-name>todos</servlet-name>
        <servlet-class>com.tpjad.ejb_jpa.servlets.TodoServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>com.tpjad.ejb_jpa.servlets.CreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>todos</servlet-name>
        <url-pattern>/todos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
</web-app>
